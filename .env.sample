# Sample environment variables for Magentic-UI

# OpenAI configuration
OPENAI_API_KEY=your-openai-key
# Optional custom base URL for OpenAI compatible APIs
OPENAI_BASE_URL=https://api.openai.com/v1

# Credentials for the web UI
APP_USERNAME=admin
APP_PASSWORD=changeme
SESSION_SECRET=changeme

# Database location
DATABASE_URI=sqlite:///./magentic_ui.db

# Docker image overrides (optional)
MAGENTIC_UI_BROWSER_IMAGE=ghcr.io/microsoft/magentic-ui-browser:0.0.1
MAGENTIC_UI_PYTHON_IMAGE=ghcr.io/microsoft/magentic-ui-python-env:0.0.1

# Workspace paths when running without Docker
INTERNAL_WORKSPACE_ROOT=/tmp/magentic/internal
EXTERNAL_WORKSPACE_ROOT=/tmp/magentic/external

# Whether the application is running inside Docker
INSIDE_DOCKER=0
RUN_WITHOUT_DOCKER=False
